(defun mew-summary-form-num () (MEW-NUM))

(let ((s (MEW-DATE)))
    (setq s (timezone-make-date-arpa-standard
             (if (or (string= s "")
                     (not (string-match mew-time-rfc-regex s)))
                 (mew-time-ctz-to-rfc
                  (mew-file-get-time (mew-expand-folder (MEW-FLD) (MEW-NUM))))
               s))))

